// Place your key bindings in this file to override the defaults

[
  {
    "key": "shift+alt+cmd+b",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "shift+alt+cmd+e",
    "command": "extension.installCustomCSS"
  },
  {
    "key": "shift+alt+cmd+d",
    "command": "extension.uninstallCustomCSS"
  },
  {
    "key": "ctrl+cmd+j",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  {
    "key": "alt+cmd+n",
    "command": "-extension.advancedNewFile"
  },
  {
    "key": "shift+alt+cmd+n",
    "command": "extension.advancedNewFile"
  },
  // Right now, Using AI in every folder
  // {
  //   "key": "shift+alt+c",
  //   "command": "github.copilot.completions.toggle"
  // },
  {
    "key": "alt+o",
    "command": "-C_Cpp.SwitchHeaderSource",
    "when": "editorTextFocus && editorLangId =~ /^(c|(cuda-)?cpp)$/ && !(config.C_Cpp.intelliSenseEngine =~ /^[dD]isabled$/)"
  },
  {
    "key": "alt+o",
    "command": "editor.action.changeAll",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+f2",
    "command": "-editor.action.changeAll",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+h",
    "command": "-workbench.action.replaceInFiles"
  },
  {
    "key": "ctrl+shift+cmd+r",
    "command": "workbench.action.reloadWindow"
  },
  {
    "key": "cmd+r",
    "command": "-workbench.action.reloadWindow",
    "when": "isDevelopment"
  }
]
